<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.real_estate_software.controller.SignupController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Sign Up Page"/>
    <GridPane alignment="CENTER">
        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </GridPane>
    <HBox alignment="CENTER">
        <Button fx:id="signUpButton" text="Sign Up" onAction="#onSignUpClick"/>
        <Button fx:id="backButton" text="Go Back" onAction="#onBackClick"/>
    </HBox>
</VBox>